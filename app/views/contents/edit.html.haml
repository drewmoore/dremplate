.row
  .col-xs-3
  .col-xs-6
    =form_for @content do |f|
      %fieldset
        %legend Edit A Content
        =if @content.errors.any?
          %h2 Errors:
          %ul
            = @content.errors.full_messages.each do |m|
              %li=m
        .row
          .col-xs-4
            =f.label :text
          .col-xs-4
            =f.text_field :text
          .col-xs-4
        .row
          .col-xs-4
            =f.label :identifier
          .col-xs-4
            =f.text_field :identifier
          .col-xs-4
        .row
          .col-xs-12
            =f.submit "Update This Content"
        .row
          .col-xs-12
            %label.required-label
              %small.asterisk * required
  .col-xs-3
